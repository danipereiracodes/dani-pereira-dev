---
import { Image } from 'astro:assets'
const { linkLive, title, description, imageUrl, technologies } = Astro.props
---

<div
	class="bg-dark-50 dark:bg-dark-900 dark:border-dark-700 lg:max-w-2/3 group min-h-full rounded-xl shadow-2xl"
>
	<a href={linkLive}>
		<div class="group relative h-48 w-full overflow-hidden overflow-hidden rounded-t-xl">
			<div
				class="absolute right-2 top-2 z-10 z-20 flex -translate-y-4 gap-4 opacity-0 transition duration-100 ease-in group-hover:translate-y-4 group-hover:opacity-100"
			>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					width="24"
					height="24"
					viewBox="0 0 24 24"
					fill="none"
					stroke="currentColor"
					stroke-width="2"
					stroke-linecap="round"
					stroke-linejoin="round"
					class="icon icon-tabler icons-tabler-outline icon-tabler-eye group-hover:opacity-1 mx-auto rounded-lg bg-[#0072ab] px-1 py-1 text-xs font-semibold text-white"
				>
					<>
						<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
						<path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0"></path>
						<path
							d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6"
						></path>
					</>
				</svg>

				<svg
					xmlns="http://www.w3.org/2000/svg"
					width="24"
					height="24"
					viewBox="0 0 24 24"
					fill="none"
					stroke="currentColor"
					stroke-width="2"
					stroke-linecap="round"
					stroke-linejoin="round"
					class="icon icon-tabler icons-tabler-outline icon-tabler-brand-github mx-auto rounded-lg bg-[#0072ab] px-1 py-1 text-xs font-semibold text-white"
				>
					<>
						<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
						<path
							d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
						></path>
					</>
				</svg>
			</div>
			<Image
				alt={`${title} site`}
				loading="eager"
				width="500"
				height="500"
				class="h-full object-cover transition-all duration-500"
				src={imageUrl}
				style="color: transparent;"
			/>
		</div>
		<div class="p-5">
			<h5 class="text-primary-600 dark:text-primary-400 mb-2 text-xl font-bold tracking-tight">
				{title}
			</h5>
			<p class="text-dark-700 dark:text-dark-200 mb-3 line-clamp-2 font-normal">
				{description}
			</p>
		</div>
	</a>

	<ul class="text-dark-700 dark:text-dark-200 mb-4 flex flex-wrap gap-1 px-4 text-sm">
		{
			technologies.map((technology: string[]) => {
				return (
					<li class="border-dark-200 dark:border-dark-800 bg-dark-300/60 dark:bg-dark-800  rounded-md border bg-[#0072ab] px-2 py-1 font-mono text-xs text-white">
						{technology}
					</li>
				)
			})
		}
	</ul>
</div>
