---
import Image from 'astro/components/Image.astro'
import imageBalloon from '../../public/balloon-cropped.png'
import imageElefantes from '../../public/elefantes.png'
import Link from './Link.astro'

interface PortfolioItemProps {
	id: number
	title: string
	buttonLive: string
	buttonCode: string
	buttonInfo: string
	isLive: Boolean
	imageUrl: string
	description: string
	status?: string
	techLogos: string[]
	linkLive: string | undefined
	linkCode: string
	technologies: string[]
	popupDescription: any
}

const portfolioData = [
	{
		id: 1,
		title: 'EL VIAJE DE LOS ELEFANTES',
		buttonLive: '',
		buttonCode: '',
		buttonInfo: '',
		isLive: true,
		imageUrl: imageElefantes,
		description: 'Lorem ipsum',
		techLogos: ['/js.png', '/node-logo.png', '/css.png', '/html.png'],
		linkLive: 'https://elviajedeloselefantesbeta.com/',
		linkCode: '#',
		technologies: ['Wordpress', 'html', 'css', 'Javascript', 'Php'],
		popupDescription: ''
	},
	{
		id: 2,
		title: 'BALLOON APP',
		buttonLive: '',
		buttonCode: '',
		buttonInfo: '',
		isLive: true,
		imageUrl: imageBalloon,
		description: 'Lorem ipsum',
		techLogos: ['/js.png', '/react.png'],
		linkLive: 'https://balloon.balloonapp.net/',
		linkCode: 'https://github.com/danipereiracodes/Balloon_Front',
		technologies: ['Html', 'CSS', 'Javascript', 'Reactjs', 'Nodejs', 'Express', 'Sql'],
		popupDescription: ''
	},
	{
		id: 1,
		title: 'EL VIAJE DE LOS ELEFANTES',
		buttonLive: '',
		buttonCode: '',
		buttonInfo: '',
		isLive: true,
		imageUrl: imageElefantes,
		description: 'Lorem ipsum',
		techLogos: ['/js.png', '/node-logo.png', '/css.png', '/html.png'],
		linkLive: 'https://elviajedeloselefantes.com/',
		linkCode: '#',
		technologies: ['Wordpress', 'html', 'css', 'Javascript', 'Php'],
		popupDescription: ''
	}
]
---

<section class="flex w-full flex-col items-center py-24 text-center">
	<div class="mx-auto">
		<h3
			class="mb-8 bg-gradient-to-t from-black to-gray-400 bg-clip-text text-center text-3xl font-bold text-transparent md:text-3xl lg:break-words lg:text-4xl"
		>
			Projects
		</h3>
	</div>
	<article class="grid grid-cols-1 gap-8 p-8 md:grid-cols-2 lg:grid-cols-3">
		{
			portfolioData.map(({ title, description, technologies, imageUrl, linkLive, linkCode }) => {
				return (
					<div class="bg-dark-50 dark:bg-dark-900 dark:border-dark-700 lg:max-w-2/3 group  min-h-full rounded-xl shadow-2xl">
						<Link href={linkLive}>
							<div class="relative h-48 w-full overflow-hidden overflow-hidden rounded-t-xl">
								<div class="absolute right-2 top-2 z-10 z-20 flex gap-4">
									<Link
										href={linkLive}
										customClass="text-white  mx-auto rounded-lg bg-[#0072ab] px-1 py-1 text-xs font-semibold"
									>
										<svg
											xmlns="http://www.w3.org/2000/svg"
											width="24"
											height="24"
											viewBox="0 0 24 24"
											fill="none"
											stroke="currentColor"
											stroke-width="2"
											stroke-linecap="round"
											stroke-linejoin="round"
											class="icon icon-tabler icons-tabler-outline icon-tabler-eye"
										>
											<>
												<path stroke="none" d="M0 0h24v24H0z" fill="none" />
												<path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" />
												<path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6" />
											</>
										</svg>
									</Link>
									<Link
										href={linkCode}
										customClass="text-white  mx-auto rounded-lg bg-[#0072ab] px-1 py-1 text-xs font-semibold"
									>
										<svg
											xmlns="http://www.w3.org/2000/svg"
											width="24"
											height="24"
											viewBox="0 0 24 24"
											fill="none"
											stroke="currentColor"
											stroke-width="2"
											stroke-linecap="round"
											stroke-linejoin="round"
											class="icon icon-tabler icons-tabler-outline icon-tabler-brand-github"
										>
											<>
												<path stroke="none" d="M0 0h24v24H0z" fill="none" />
												<path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" />
											</>
										</svg>
									</Link>
								</div>
								<Image
									alt={`${title} site`}
									loading="eager"
									width="500"
									height="500"
									class="h-full object-cover transition-all duration-500"
									src={imageUrl}
									style="color: transparent;"
								/>
							</div>
							<div class=" p-5">
								<h5 class="text-primary-600 dark:text-primary-400 mb-2 text-xl font-bold tracking-tight">
									{title}
								</h5>
								<p class="text-dark-700 dark:text-dark-200 mb-3 line-clamp-3 font-normal">
									{description}
								</p>
							</div>
						</Link>
						<ul class="text-dark-700 dark:text-dark-200 mb-4 flex flex-wrap gap-1 px-4 text-sm">
							{technologies.map((technology) => {
								return (
									<li class="border-dark-200 dark:border-dark-800 bg-dark-300/60 dark:bg-dark-800  rounded-md border bg-[#0072ab] px-2 py-1 font-mono text-xs text-white">
										{technology}
									</li>
								)
							})}
						</ul>
					</div>
				)
			})
		}
	</article>
</section>
